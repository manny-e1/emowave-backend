{
	"name": "emowave-backend",
	"version": "0.0.1",
	"type": "module",
	"description": "A backend from emowave mobile application",
	"main": "src/index.ts",
	"scripts": {
		"dev": "tsx watch --env-file=.env src/index.ts",
		"build": "tsc && npm run copy-env && npm run copy-workers",
		"start": "node --env-file=.env dist/index.js",
		"copy-env": "cp .env dist/",
		"copy-workers": "cp -r src/workers dist/",
		"db:migrate": "drizzle-kit generate --config=drizzle.config.ts",
		"db:push": "drizzle-kit push --config=drizzle.config.ts",
		"studio": "drizzle-kit studio --config=drizzle.config.ts",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/manny-e1/emowave-backend.git"
	},
	"author": "https://github.com/manny-e1",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/manny-e1/emowave-backend/issues"
	},
	"homepage": "https://github.com/manny-e1/emowave-backend#readme",
	"dependencies": {
		"argon2": "^0.41.1",
		"canvas": "^3.1.0",
		"cors": "^2.8.5",
		"csv-parser": "^3.2.0",
		"docx": "^9.4.1",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.42.0",
		"express": "^5.1.0",
		"helmet": "^8.1.0",
		"http-errors": "^2.0.0",
		"jsonwebtoken": "^9.0.2",
		"libreoffice-convert": "^1.6.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.2",
		"mupdf-js": "^2.0.1",
		"nodemailer": "^6.10.1",
		"pdf-lib": "^1.17.1",
		"pdf.js-extract": "^0.2.1",
		"pdf2json": "^3.1.5",
		"pdfjs-dist": "^5.1.91",
		"pg": "^8.15.1",
		"sharp": "^0.34.1",
		"tesseract.js": "^6.0.1",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.14.1",
		"@types/nodemailer": "^6.4.17",
		"@types/pg": "^8.11.13",
		"drizzle-kit": "^0.31.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3"
	}
}
